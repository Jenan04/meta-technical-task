generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Type {
  PRIVATE
  PUBLIC
}

enum ContentType {
  IMAGE
  FILE
  NOTE
}

enum UploadStatus {
  PENDING
  COMPLETED
  FAILED
}

model User {
  id         String   @id @default(uuid())
  name       String
  isComplete Boolean  @default(false)
  spaces     Space[]
  uploads    Upload[]
}

model Space {
  id        String    @id @default(uuid())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  userId    String
  user      User      @relation(fields: [userId], references: [id])
  type      Type      @default(PUBLIC)
  name      String
  slug      String    @unique
  contents  Content[]
  uploads   Upload[]
}

model Content {
  id         String      @id @default(uuid())
  type       ContentType
  text       String?
  url        String?
  size       Int?
  createdAt  DateTime    @default(now())
  spaceId    String
  space      Space       @relation(fields: [spaceId], references: [id])
  visibility Type        @default(PUBLIC)
  uploadId  String?
  upload    Upload?      @relation(fields: [uploadId], references: [id])
}

model Upload {
  id      String  @id @default(uuid())
  userId  String
  spaceId String?

  status  UploadStatus @default(PENDING)
  fileUrl String?
  size    Int?
  type    ContentType?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user  User   @relation(fields: [userId], references: [id])
  space Space? @relation(fields: [spaceId], references: [id])
  contents Content[]

  @@index([userId])
  @@index([status])
}
